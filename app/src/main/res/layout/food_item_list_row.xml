<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.kleog.fitnessapp.Views.MealActivity">

    <TextView
        android:id="@+id/foodItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Chicken Stock Cube"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ImageButton
        android:id="@+id/modifyImageButton"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:contentDescription="image to resemble a picture used for modification"
        android:src="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/deleteImageButton"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:contentDescription="image to resemble a picture used for deletion"
        android:minWidth="50dp"
        android:src="@android:drawable/ic_menu_delete" />
</LinearLayout>
