<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kleog.fitnessapp.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/calorieBarPlaceholder"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/edit_text" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:stretchColumns="100">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/optionsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contextClickable="false"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:selectAllOnFocus="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="options"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/breaskFastButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breakfast" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/LunchButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lunch" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/dinnerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dinner" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/snackButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="snacks" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/graphButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="goToGraphsPage"
                        android:text="Graphs" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
